<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rebound.mapper.TodayMessageMapper">
    <insert id="insertTodayMessage">
        insert into tbl_today_message(today_message_title,today_message_content,counselor_id)
        values (#{todayMessageTitle},#{todayMessageContent},#{counselorId})
    </insert>
    <select id="selectTodayMessage">
        select m.today_message_content, m.today_message_title, c.counselor_name
        from tbl_counselor c join tbl_today_message m                                                                                                        on  c.id = m.counselor_id
        order by m.id desc
    </select>
</mapper>